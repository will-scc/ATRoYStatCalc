<UserControl x:Class="ATRoYStatCalc.View.SeyanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATRoYStatCalc.View"
             mc:Ignorable="d" 
             d:Background="White"
             DataContext="{Binding SeyanView, Source={StaticResource ViewModelLocator}}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="5"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Margin="5"
                  Grid.Row="1"
                  Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Content="Level"
                       FontWeight="Bold"
                       Grid.Row="0"
                       Grid.Column="0" />
                <Label Content="{Binding Seyan.CurrentLevel}"
                       FontWeight="Bold"
                       Grid.Row="0"
                       Grid.Column="1" />

                <Label Content="Experience"
                       Grid.Row="1"
                       Grid.Column="0" />

                <Label Content="{Binding Seyan.CurrentExp}"
                       Foreground="{Binding Seyan.MaxExpExceeded, Converter={StaticResource BoolToRed}}"
                       Grid.Row="1"
                       Grid.Column="1" />

                <Label Content="Armour"
                       Grid.Row="2" />
                <Label Content="N/A"
                       Grid.Row="2"
                       Grid.Column="1" />

                <Label Content="Weapon"
                       Grid.Row="3"
                       Grid.Column="0" />
                <Label Content="N/A"
                       Grid.Row="3"
                       Grid.Column="1" />

                <Label Content="Speed"
                       Grid.Row="4"
                       Grid.Column="0" />
                <Label Content="{Binding Seyan.Speed}"
                       Grid.Row="4"
                       Grid.Column="1" />
            </Grid>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        Grid.ColumnSpan="6">
                <CheckBox Content="Hardcore"
                          IsChecked="{Binding Seyan.HardCore}"
                          Margin="5" />
                <CheckBox Content="PvP"
                          IsChecked="{Binding Seyan.PvpChar}"
                          Margin="5" />
                <CheckBox Content="Master Athlete"
                          IsChecked="{Binding Seyan.MasterAthlete}"
                          Margin="5"/>
                <CheckBox Content="Master Light Warrior"
                          IsChecked="{Binding Seyan.MasterLightWarrior}"
                          Margin="5"/>
                <CheckBox Content="Master Dark Warrior"
                          IsChecked="{Binding Seyan.MasterDarkWarrior}"
                          Margin="5"/>
            </StackPanel>

            <local:EquipmentSlot Text="Weapon"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Weapon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="0" />

            <local:EquipmentSlot Text="Ring 1"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.FirstRing, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="1" />

            <local:EquipmentSlot Text="Ring 2"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.SecondRing, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="2" />

            <local:EquipmentSlot Text="Amulet"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Amulet, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="3" />

            <local:EquipmentSlot Text="Head"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Head, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="4" />

            <local:EquipmentSlot Text="Cape"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Cape, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="0"
                                 Grid.Column="5" />

            <local:EquipmentSlot Text="Chest"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Chest, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="1"
                                 Grid.Column="1" />

            <local:EquipmentSlot Text="Belt"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Belt, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="1"
                                 Grid.Column="2" />

            <local:EquipmentSlot Text="Arms"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Arms, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="1"
                                 Grid.Column="3" />

            <local:EquipmentSlot Text="Legs"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Legs, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="1"
                                 Grid.Column="4" />

            <local:EquipmentSlot Text="Boots"
                                 AvailableStats="{Binding DataContext.Seyan.Skills, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Equipment="{Binding DataContext.EquipmentSet.Boots, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Grid.Row="1"
                                 Grid.Column="5" />
        </Grid>

        <Grid x:Name="CharacterStats"
              Margin="5"
              Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Content="Stat"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Grid.Column="0" />
            <Label Content="Base"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Grid.Column="1"
                   Grid.ColumnSpan="2" />
            <Label Content="Mod"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Grid.Column="3" />

            <Label Content="{Binding Seyan.Hitpoints.DisplayName}"
                   Grid.Row="1"
                   Grid.Column="0" />
            <Label Content="{Binding Seyan.Hitpoints.Base}"
                   Grid.Row="1"
                   Grid.Column="1" />
