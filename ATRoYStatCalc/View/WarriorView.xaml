                    Grid.Row="0"
                    Grid.ColumnSpan="2">
            <Label Content="Warrior - " />
            <TextBox Text="{Binding Warrior.CharacterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
        </StackPanel>

