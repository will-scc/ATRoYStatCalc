                              MinValue="{Binding Warrior.Hitpoints.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              VerticalAlignment="Center"
                              Margin="1"
                              Grid.Column="1"
                              Grid.Row="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Hitpoints.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              VerticalAlignment="Center"
                              Margin="1"
                              Grid.Column="2"
                              Grid.Row="1" />
