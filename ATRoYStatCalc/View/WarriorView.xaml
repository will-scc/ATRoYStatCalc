                    Maximum="{Binding Warrior.MaxBase, Mode=OneWay}"
                    VerticalAlignment="Center"
                    Grid.Row="27"
                    Grid.Column="2" />
            <Label Content="{Binding Warrior.Immunity.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Immunity.MaxModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Grid.Row="27"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.Profession.DisplayName}"
                   Grid.Row="28"
                   Grid.Column="0" />
            <Label Content="{Binding Warrior.Profession.Base}"
                   Grid.Row="28"
                   Grid.Column="1" />
            <Slider Value="{Binding Warrior.Profession.Base, Mode=TwoWay}"
                    Minimum="{Binding Warrior.Profession.Start, Mode=TwoWay}"
                    Maximum="{Binding Warrior.MaxBase, Mode=OneWay}"
                    VerticalAlignment="Center"
                    Grid.Row="28"
                    Grid.Column="2" />
            <Label Content="{Binding Warrior.Profession.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.MissingProfessionBases, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Grid.Row="28"
                   Grid.Column="3" />
        </Grid>
    </Grid>
</UserControl>
