                    Minimum="{Binding Warrior.Hitpoints.Start, Mode=TwoWay}"
                    Maximum="{Binding Warrior.MaxBase, Mode=OneWay}"
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Grid.Column="2" />
            <Label Content="{Binding Warrior.Hitpoints.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Hitpoints.MaxModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Grid.Row="1"
                   Grid.Column="3" />

