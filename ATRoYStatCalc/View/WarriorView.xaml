            <Label Content="{Binding Warrior.BodyControl.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.BodyControl.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="21"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.SpeedSkill.DisplayName}"
                   ToolTip="Modified by Agility/Intuition/Strength"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="22"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.SpeedSkill.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.SpeedSkill.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="22"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.SpeedSkill.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="22"
                              Grid.Column="2" />
            <Label Content="{Binding Warrior.SpeedSkill.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.SpeedSkill.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="22"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.Regenerate.DisplayName}"
                   ToolTip="Modified by Strength/Strength/Strength"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="23"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.Regenerate.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.Regenerate.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="23"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Regenerate.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="23"
                    Grid.Column="2" />
            <Label Content="{Binding Warrior.Regenerate.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Regenerate.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="23"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.Bartering.DisplayName}"
                   ToolTip="Modified by Wisdom/Intuition/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="24"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.Bartering.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.Bartering.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="24"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Bartering.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="24"
                              Grid.Column="2" />
            <Label Content="{Binding Warrior.Bartering.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Bartering.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="24"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.Perception.DisplayName}"
                   ToolTip="Modified by Wisdom/Intuition/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="25"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.Perception.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.Perception.Start, Mode=TwoWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="25"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Perception.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="25"
                              Grid.Column="2" />
            <Label Content="{Binding Warrior.Perception.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Perception.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="25"
                   Grid.Column="4" />

            <Label Content="{Binding Warrior.Stealth.DisplayName}"
                   ToolTip="Modified by Agility/Agility/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="26"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.Stealth.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.Stealth.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="26"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Stealth.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="26"
                              Grid.Column="2" />
            <Label Content="{Binding Warrior.Stealth.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Stealth.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="26"
                   Grid.Column="3" />

            <Label Content="{Binding Warrior.Immunity.DisplayName}"
                   ToolTip="Modified by Intuition/Intuition/Strength"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="27"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Warrior.Immunity.Base, Mode=TwoWay}"
                              MinValue="{Binding Warrior.Immunity.Start, Mode=OneWay}"
                              MaxValue="{Binding Warrior.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="27"
                   Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Warrior.Immunity.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="27"
                    Grid.Column="2" />
            <Label Content="{Binding Warrior.Immunity.Mod, Mode=OneWay}"
                   Foreground="{Binding Warrior.Immunity.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="27"
                   Grid.Column="3"/>

            <Label Content="{Binding Warrior.Profession.DisplayName}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="28"
                   Grid.Column="0" />
           
            <Label Content="{Binding Warrior.Profession.Base, Mode=OneWay}"
                   Grid.Row="28"
                   Grid.Column="3" />
        </Grid>

        <StackPanel x:Name="Overview"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="5">
            <GroupBox Header="Overview"
                      FontWeight="Bold"
                      Padding="5">
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Level:"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Grid.Row="1"
                           Grid.Column="0" />

                    <Label Content="{Binding Warrior.CurrentLevel, Mode=OneWay}"
                           ContentStringFormat="N2"
                           Grid.Row="1"
                           Grid.Column="1" />
                    <Label Content="Experience:"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Grid.Row="2"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.CurrentExp, Mode=OneWay}"
                           Grid.Row="2"
                           Grid.Column="1" />

                    <Label Content="Armour Value:"
                           ToolTip="This is in addition to AV from equipment."
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="3"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.ArmourValue, Mode=OneWay}"
                           ToolTip="This is in addition to AV from equipment."
                           Grid.Row="3"
                           Grid.Column="1" />
                    <n:DecimalUpDown Value="{Binding Warrior.ExtraArmourValue, Mode=TwoWay}"
                                     MinValue="0"
                                     StepSize="0.25"
                                     IsReadOnly="False"
                                     Margin="1"
                                     Grid.Row="3"
                                     Grid.Column="2" />
                    
                    <Label Content="Weapon Value:"
                           ToolTip="This is in addition to WV from weapon."
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="4"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.WeaponValue, Mode=OneWay}"
                           ToolTip="This is in addition to WV from weapon."
                           Grid.Row="4"
                           Grid.Column="1" />
                    <n:DecimalUpDown Value="{Binding Warrior.ExtraWeaponValue, Mode=TwoWay}"
                                     MinValue="0"
                                     StepSize="0.25"
                                     IsReadOnly="False"
                                     Margin="1"
                                     Grid.Row="4"
                                     Grid.Column="2" />

                    <Label Content="Speed:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="5"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.Speed, Mode=OneWay}"
                           Grid.Row="5"
                           Grid.Column="1" />
                    <n:UIntegerUpDown Value="{Binding Warrior.ExtraSpeed, Mode=TwoWay}"
                                      MinValue="0"
                                      IsReadOnly="False"
                                      Margin="1"
                                      Grid.Row="5"
                                      Grid.Column="2" />

                    <Label Content="Offense:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="6"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.Offence, Mode=OneWay}"
                           Grid.Row="6"
                           Grid.Column="1" />

                    <Label Content="Defense:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="7"
                           Grid.Column="0" />
                    <Label Content="{Binding Warrior.Defence, Mode=OneWay}"
                           Grid.Row="7"
                           Grid.Column="1" />
                </Grid>

            </GroupBox>

            <GroupBox Header="Tactics"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Vertical"
                            Margin="5">
                    <Label Content="{Binding Warrior.TacticsSkillBonus, Mode=OneWay}"
                           ContentStringFormat="Skill Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <Label Content="{Binding Warrior.TacticsImmunityBonus, Mode=OneWay}"
                           ContentStringFormat="Immunity Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <Label Content="{Binding Warrior.TacticsOffDefBonus, Mode=OneWay}"
                           ContentStringFormat="Off/Def Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="5">
                        <Label Content="Include Bonus"
                               VerticalAlignment="Center" />
                        <CheckBox IsChecked="{Binding Warrior.IncludeTactics, Mode=TwoWay}"
                                  Command="{Binding UpdateCharacter}"
                                  VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>

            </GroupBox>

            <GroupBox Header="Warcry"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <Label Content="In Progress"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"
                       FontWeight="Normal" />
            </GroupBox>

            <GroupBox Header="Other"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5">
                        <Label Content="Athlete"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                        <n:UIntegerUpDown Value="{Binding Warrior.AthleteBonus, Mode=TwoWay}"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsEnabled="False">
                        <Label Content="Assassin"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                        <n:UIntegerUpDown Value="0"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5">
                        <Label Content="Light/Dark Warrior" />
                        <n:UIntegerUpDown Value="{Binding Warrior.TimeWarriorBonus, Mode=TwoWay}"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3"
                                          VerticalAlignment="Center">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="5">
                        <Label Content="Hardcore"
                               VerticalAlignment="Center" />
                        <CheckBox IsChecked="{Binding Warrior.HardCore, Mode=TwoWay}"
                                  Command="{Binding UpdateCharacter}"
                                  VerticalAlignment="Center" />
                    </StackPanel>


                </StackPanel>
            </GroupBox>

            <GroupBox Header="Combat Effectiveness"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Label Content="Enemy Defence: " />
                        <n:UIntegerUpDown Value="{Binding EnemyDefence, Mode=TwoWay}"
                                          IsReadOnly="False"
                                          IsDisplayLengthFixed="True"
                                          DisplayLength="4"
                                          MinValue="0" />
                    </StackPanel>
                    <Label Content="{Binding Accuracy, Mode=OneWay}"
                           ContentStringFormat="Accuracy: {0}%"
                           HorizontalAlignment="Right"
                           FontWeight="Bold" />
                    <Label Content="{Binding EffectiveArmour, Mode=OneWay}"
                           ContentStringFormat="Enemy Effective Armour: {0}%"
                           HorizontalAlignment="Right"
                           FontWeight="Bold" />
                </StackPanel>

            </GroupBox>
            
        </StackPanel>

    </Grid>
        
</UserControl>
