                    Grid.Row="26"
                    Grid.Column="2" />
            <Label Content="{Binding Mage.Profession.Mod, Mode=OneWay}"
                   Grid.Row="26"
                   Grid.Column="3" />
        </Grid>
    </Grid>


</UserControl>
