                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="22"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.SpeedSkill.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="22"
                              Grid.Column="2" />
            <Label Content="{Binding Rogue.SpeedSkill.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.SpeedSkill.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="22"
                   Grid.Column="3" />

            <Label Content="{Binding Rogue.Regenerate.DisplayName}"
                   ToolTip="Modified by Strength/Strength/Strength"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="23"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Rogue.Regenerate.Base, Mode=TwoWay}"
                              MinValue="{Binding Rogue.Regenerate.Start, Mode=OneWay}"
                              MaxValue="{Binding Rogue.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="23"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.Regenerate.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="23"
                    Grid.Column="2" />
            <Label Content="{Binding Rogue.Regenerate.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.Regenerate.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="23"
                   Grid.Column="3" />

            <Label Content="{Binding Rogue.Bartering.DisplayName}"
                   ToolTip="Modified by Wisdom/Intuition/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="24"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Rogue.Bartering.Base, Mode=TwoWay}"
                              MinValue="{Binding Rogue.Bartering.Start, Mode=OneWay}"
                              MaxValue="{Binding Rogue.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="24"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.Bartering.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="24"
                              Grid.Column="2" />
            <Label Content="{Binding Rogue.Bartering.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.Bartering.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="24"
                   Grid.Column="3" />

            <Label Content="{Binding Rogue.Perception.DisplayName}"
                   ToolTip="Modified by Wisdom/Intuition/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="25"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Rogue.Perception.Base, Mode=TwoWay}"
                              MinValue="{Binding Rogue.Perception.Start, Mode=TwoWay}"
                              MaxValue="{Binding Rogue.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="25"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.Perception.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="25"
                              Grid.Column="2" />
            <Label Content="{Binding Rogue.Perception.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.Perception.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="25"
                   Grid.Column="4" />

            <Label Content="{Binding Rogue.Stealth.DisplayName}"
                   ToolTip="Modified by Agility/Agility/Intuition"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="26"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Rogue.Stealth.Base, Mode=TwoWay}"
                              MinValue="{Binding Rogue.Stealth.Start, Mode=OneWay}"
                              MaxValue="{Binding Rogue.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="26"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.Stealth.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="26"
                              Grid.Column="2" />
            <Label Content="{Binding Rogue.Stealth.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.Stealth.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="26"
                   Grid.Column="3" />

            <Label Content="{Binding Rogue.Immunity.DisplayName}"
                   ToolTip="Modified by Intuition/Intuition/Strength"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="27"
                   Grid.Column="0" />
            <n:UIntegerUpDown Value="{Binding Rogue.Immunity.Base, Mode=TwoWay}"
                              MinValue="{Binding Rogue.Immunity.Start, Mode=OneWay}"
                              MaxValue="{Binding Rogue.MaxBase, Mode=OneWay}"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="27"
                              Grid.Column="1" />
            <n:UIntegerUpDown Value="{Binding Rogue.Immunity.EquipmentBonus, Mode=TwoWay}"
                              MinValue="0"
                              IsReadOnly="False"
                              SelectAllTextOnFocus="True"
                              Margin="1"
                              VerticalAlignment="Center"
                              Grid.Row="27"
                              Grid.Column="2" />
            <Label Content="{Binding Rogue.Immunity.Mod, Mode=OneWay}"
                   Foreground="{Binding Rogue.Immunity.MaxEquipmentModExceeded, Mode=OneWay, Converter={StaticResource BoolToRed}}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="27"
                   Grid.Column="3"/>

            <Label Content="{Binding Rogue.Profession.DisplayName}"
                   Margin="1"
                   VerticalAlignment="Center"
                   Grid.Row="28"
                   Grid.Column="0" />
           
            <Label Content="{Binding Rogue.Profession.Base, Mode=OneWay}"
                   Grid.Row="28"
                   Grid.Column="3" />
        </Grid>

        <StackPanel x:Name="Overview"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="5">
            <GroupBox Header="Overview"
                      FontWeight="Bold"
                      Padding="5">
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Level:"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Grid.Row="1"
                           Grid.Column="0" />

                    <Label Content="{Binding Rogue.CurrentLevel, Mode=OneWay}"
                           ContentStringFormat="N2"
                           Grid.Row="1"
                           Grid.Column="1" />
                    <Label Content="Experience:"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Grid.Row="2"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.CurrentExp, Mode=OneWay}"
                           Grid.Row="2"
                           Grid.Column="1" />

                    <Label Content="Armour Value:"
                           ToolTip="This is in addition to AV from equipment."
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="3"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.ArmourValue, Mode=OneWay}"
                           ToolTip="This is in addition to AV from equipment."
                           Grid.Row="3"
                           Grid.Column="1" />
                    <n:DecimalUpDown Value="{Binding Rogue.ExtraArmourValue, Mode=TwoWay}"
                                     MinValue="0"
                                     StepSize="0.25"
                                     IsReadOnly="False"
                                     Margin="1"
                                     Grid.Row="3"
                                     Grid.Column="2" />

                    <Label Content="Weapon Value:"
                           ToolTip="This is in addition to WV from weapon."
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="4"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.WeaponValue, Mode=OneWay}"
                           ToolTip="This is in addition to WV from weapon."
                           Grid.Row="4"
                           Grid.Column="1" />
                    <n:DecimalUpDown Value="{Binding Rogue.ExtraArmourValue, Mode=TwoWay}"
                                     MinValue="0"
                                     StepSize="0.25"
                                     IsReadOnly="False"
                                     Margin="1"
                                     Grid.Row="3"
                                     Grid.Column="2" />

                    <Label Content="Speed:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="5"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.Speed, Mode=OneWay}"
                           Grid.Row="5"
                           Grid.Column="1" />
                    <n:UIntegerUpDown Value="{Binding Rogue.ExtraSpeed, Mode=TwoWay}"
                                      MinValue="0"
                                      IsReadOnly="False"
                                      Margin="1"
                                      Grid.Row="5"
                                      Grid.Column="2" />
                    
                    <Label Content="Offense:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="6"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.Offence, Mode=OneWay}"
                           Grid.Row="6"
                           Grid.Column="1" />

                    <Label Content="Defense:"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           Grid.Row="7"
                           Grid.Column="0" />
                    <Label Content="{Binding Rogue.Defence, Mode=OneWay}"
                           Grid.Row="7"
                           Grid.Column="1" />
                </Grid>

            </GroupBox>

            <GroupBox Header="Tactics"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Vertical"
                            Margin="5">
                    <Label Content="{Binding Rogue.TacticsSkillBonus, Mode=OneWay}"
                           ContentStringFormat="Skill Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <Label Content="{Binding Rogue.TacticsImmunityBonus, Mode=OneWay}"
                           ContentStringFormat="Immunity Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <Label Content="{Binding Rogue.TacticsOffDefBonus, Mode=OneWay}"
                           ContentStringFormat="Off/Def Bonus: {0}"
                           HorizontalAlignment="Right" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="5">
                        <Label Content="Include Bonus"
                               VerticalAlignment="Center" />
                        <CheckBox IsChecked="{Binding Rogue.IncludeTactics, Mode=TwoWay}"
                                  Command="{Binding UpdateCharacter}"
                                  VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>

            </GroupBox>

            <GroupBox Header="Warcry"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <Label Content="In Progress"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"
                       FontWeight="Normal" />
            </GroupBox>

            <GroupBox Header="Other"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5">
                        <Label Content="Athlete"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                        <n:UIntegerUpDown Value="{Binding Rogue.AthleteBonus, Mode=TwoWay}"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsEnabled="False">
                        <Label Content="Assassin"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                        <n:UIntegerUpDown Value="0"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5">
                        <Label Content="Light/Dark Rogue" />
                        <n:UIntegerUpDown Value="{Binding Rogue.TimeWarriorBonus, Mode=TwoWay}"
                                          MinValue="0"
                                          MaxValue="30"
                                          StepSize="3"
                                          VerticalAlignment="Center">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="ValueChanged">
                                    <i:InvokeCommandAction Command="{Binding UpdateCharacter}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </n:UIntegerUpDown>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="5">
                        <Label Content="Hardcore"
                               VerticalAlignment="Center" />
                        <CheckBox IsChecked="{Binding Rogue.HardCore, Mode=TwoWay}"
                                  Command="{Binding UpdateCharacter}"
                                  VerticalAlignment="Center" />
                    </StackPanel>


                </StackPanel>
            </GroupBox>

            <GroupBox Header="Combat Effectiveness"
                      FontWeight="Bold"
                      Padding="5"
                      Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Label Content="Enemy Defence: " />
                        <n:UIntegerUpDown Value="{Binding EnemyDefence, Mode=TwoWay}"
                                          IsReadOnly="False"
                                          IsDisplayLengthFixed="True"
                                          DisplayLength="4"
                                          MinValue="0" />
                    </StackPanel>
                    <Label Content="{Binding Accuracy, Mode=OneWay}"
                           ContentStringFormat="Accuracy: {0}%"
                           HorizontalAlignment="Right"
                           FontWeight="Bold" />
                    <Label Content="{Binding EffectiveArmour, Mode=OneWay}"
                           ContentStringFormat="Enemy Effective Armour: {0}%"
                           HorizontalAlignment="Right"
                           FontWeight="Bold" />
                </StackPanel>

            </GroupBox>

        </StackPanel>

    </Grid>
        
</UserControl>
